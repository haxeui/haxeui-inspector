<?xml version="1.0" encoding="utf-8"?>
<project>
    <meta title="haxeui-inspector" package="haxe.ui.tools.inspector.haxeui-inspector" version="1.0.0" company="" />
    <app main="haxe.ui.tools.inspector.Main" file="haxeui-inspector" path="bin" />

    <window background="#FFFFFF" fps="60" />
    <window width="600" height="500" unless="mobile" />

    <!-- classpath, haxe libs -->
    <source path="src" />

    <haxelib name="openfl" />
    <haxelib name="actuate" />

    <haxelib name="haxeui-core" />
    <haxelib name="haxeui-openfl" />
    <haxelib name="haxeui-remoting" />

    <haxedef name="haxeui-remoting-server" />

    <assets path="assets/css" rename="css" />
    <assets path="assets/ui" rename="ui" />
    <assets path="assets/icons" rename="icons" />
    <assets path="assets/img" rename="img" />
</project>
